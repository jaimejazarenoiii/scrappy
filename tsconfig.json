{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "components/*": ["components/*"],
      "contexts/*": ["contexts/*"],
      "services/*": ["services/*"],
      "styles/*": ["styles/*"]
    }
  },
  "include": [
    "src",
    "components",
    "contexts",
    "services",
    "styles",
    "App.tsx",
    "vite.config.ts"
  ]
}


